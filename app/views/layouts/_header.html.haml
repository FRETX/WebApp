%header
  .container
    %a.logo{ href: root_path }
      = image_tag 'logo.png', alt: 'Fretx'

    %a.btn.get-fretx{ href: "#" }
      = image_tag 'rock-ico.png'
      Get FretX

    #userview_container.header-links
      - if current_user.blank?
        = link_to 'Sign Up', user_facebook_omniauth_authorize_path
        = link_to 'Login', user_facebook_omniauth_authorize_path
      - else
        %ul.list-unstyled
          %li.dropdown.txt
            %a#logout.dropdown-toggle{"data-toggle": "dropdown", href: "#"}
              = current_user.name
              %img{ src: "#{current_user.omniaccount.photo_url}" }/
            %ul.dropdown-menu
              %li
                = link_to 'Editor', editor_path, class: 'submenu'
              %li
                = link_to 'Logout', destroy_user_session_path, method: 'delete', class: 'submenu'
